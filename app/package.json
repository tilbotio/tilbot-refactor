{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "main": "electron-main.cjs",
  "workspaces": {
    "nohoist": ["**"]
  },
  "scripts": {
    "start": "electron .",
    "package-win": "electron-packager . tilbot --overwrite --platform=win32 --arch=x64 --icon=../frontend/src/icon/win/icon.ico --out=../dist",
    "package-linux": "electron-packager . tilbot --overwrite --platform=linux --arch=x64 --icon=../frontend/src/icon/win/icon.ico --out=../dist",
    "package-mac-x64": "electron-packager . tilbot --overwrite --platform=darwin --arch=x64 --icon=../frontend/src/icon/mac/icon.icns --out=../dist",
    "package-mac-arm": "electron-packager . tilbot --overwrite --platform=darwin --arch=arm64 --icon=../frontend/src/icon/mac/icon.icns --out=../dist"
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "adm-zip": "^0.5.10",
    "csv-database": "^0.9.2",
    "n-readlines": "^1.0.1",
    "node-fetch": "^2.7.0",
    "openai": "^3.3.0",
    "public-ip": "4.0.4"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-packager": "^17.1.1",
    "tslib": "^2.3.1"
  }
}
