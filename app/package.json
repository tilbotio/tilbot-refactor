{
  "name": "app",
  "version": "1.0.0",
  "description": "Create custom chatbots",
  "author": "Jan de Wit, Tilburg University",
  "private": true,
  "main": "electron-main.ts",
  "type": "module",
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "build": {
    "directories": {
      "buildResources": "_build",
      "output": "../dist"
    },
    "appId": "tilbot",
    "linux":{
      "category": "Science"
    },
    "icon": "../frontend/src/icon/png/1024x1024.png",
    "extraResources": [
      {
        "from": "../common",
        "to": "common"
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "package-win": "electron-builder --windows --x64",
    "package-linux": "electron-builder --linux --x64",
    "package-mac-x64": "electron-builder --mac --x64",
    "package-mac-arm": "electron-builder --mac --arm64"
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "adm-zip": "^0.5.10",
    "csv-database": "^0.9.2",
    "n-readlines": "^1.0.1",
    "node-fetch": "^2.7.0",
    "openai": "^3.3.0",
    "public-ip": "4.0.4"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "tslib": "^2.3.1"
  }
}
